#!/bin/bash

if [ -z "$1" ]; then
	echo "Usage: ./server <start|stop|restart>"
	exit
fi

if [ "$1" = "start" ]; then

	echo "Initializing NFV-MANO components..."

	python ../nfv-mano/vim.py &> ../nfv-mano/logs/vim.log &
	echo "VIM OK!"

	python ../nfv-mano/vnfm.py &> ../nfv-mano/logs/vnfm.log &
	echo "VNFM OK!"

	python ../nfv-mano/nfvo.py &> ../nfv-mano/logs/nfvo.log &
	echo "NFVO OK!"

elif [ "$1" = "stop" ]; then

	echo "Stopping NFV-MANO components..."

	pkill -f vim.py
	echo "VIM stopped"

	pkill -f vnfm.py
	echo "VNFM stopped"

	pkill -f nfvo.py
	echo "NFVO stopped"

elif [ "$1" = "restart" ]; then

	echo "Restarting NFV-MANO components..."

	pkill -f vim.py
	python ../nfv-mano/vim.py &> ../nfv-mano/logs/vim.log &
	echo "VIM OK!"

	pkill -f vnfm.py
	python ../nfv-mano/vnfm.py &> ../nfv-mano/logs/vnfm.log &
	echo "VNFM OK!"

	pkill -f nfvo.py
	python ../nfv-mano/nfvo.py &> ../nfv-mano/logs/nfvo.log &
	echo "NFVO OK!"

else
    echo "nothing to do here."
fi
